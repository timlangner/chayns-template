{
    "name": "chayns-template",
    "version": "1.0.0",
    "description": "A template for creating chayns pages and several other plugins.",
    "author": "Tim Langner",
    "main": "src/index.jsx",
    "scripts": {
        "build": "cross-env NODE_ENV=production webpack -p",
        "build:staging": "cross-env NODE_ENV=production webpack -p --env.staging",
        "start": "cross-env NODE_ENV=development webpack-dev-server --hot",
        "test": "yarn test:tsc && yarn test:eslint && yarn test:jest",
        "test:eslint": "eslint --ext .js,.jsx,.ts,.tsx src/**/*.*",
        "test:jest": "jest --passWithNoTests",
        "test:jest-watch": "jest --watch",
        "test:tsc": "tsc"
    },
    "lint-staged": {
        "*.{js,jsx,css,scss,json,html,md}": "prettier --write"
    },
    "browserslist": [
        "> 0.5% in DE",
        "last 3 versions",
        "not dead",
        "not op_mini all"
    ],
    "prettier": {
        "singleQuote": true,
        "tabWidth": 4
    },
    "dependencies": {
        "@hot-loader/react-dom": "^16.13.0",
        "@reduxjs/toolkit": "^1.4.0",
        "bowser": "^2.9.0",
        "chayns-components": "^4.20.6",
        "chayns-logger": "^2.8.5",
        "core-js": "^3.6.5",
        "prop-types": "^15.7.2",
        "react": "^16.13.1",
        "react-color": "^2.19.3",
        "react-dom": "^16.13.1",
        "react-hot-loader": "^4.12.21",
        "sass-loader": "^10.1.0",
        "style-loader": "^2.0.0",
        "whatwg-fetch": "^3.5.0"
    },
    "devDependencies": {
        "@babel/core": "^7.10.3",
        "@babel/plugin-proposal-class-properties": "^7.10.1",
        "@babel/plugin-transform-react-constant-elements": "^7.10.1",
        "@babel/preset-env": "^7.10.3",
        "@babel/preset-react": "^7.10.1",
        "@babel/preset-typescript": "^7.10.1",
        "@types/react": "^16.9.41",
        "@types/react-dom": "^16.9.8",
        "appcache-webpack-plugin": "^1.4.0",
        "babel-loader": "^8.1.0",
        "babel-plugin-styled-components": "^1.10.7",
        "babel-plugin-transform-imports": "^2.0.0",
        "babel-plugin-transform-react-remove-prop-types": "^0.4.24",
        "chayns-doc": "^1.1.3",
        "clean-webpack-plugin": "^3.0.0",
        "cross-env": "^7.0.2",
        "css-loader": "^3.6.0",
        "html-webpack-plugin": "^4.3.0",
        "mini-css-extract-plugin": "^0.9.0",
        "node-sass": "^4.14.1",
        "postcss-loader": "^4.1.0",
        "prettier": "^2.0.5",
        "prettier-plugin-packagejson": "^2.2.5",
        "webpack": "^4.43.0",
        "webpack-cli": "^3.3.12",
        "webpack-dev-server": "^3.11.0"
    }
}
